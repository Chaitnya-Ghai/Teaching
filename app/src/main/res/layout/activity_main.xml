<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<androidx.constraintlayout.widget.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/h_gd_.38"
    app:layout_constraintGuide_percent=".38"
    />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gd_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42" />

<androidx.constraintlayout.widget.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/h_gd_5"
    app:layout_constraintGuide_percent=".5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gd_.57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.57" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".7"
        android:id="@+id/h_gd_7"/>
<!--vertical-->
<!---->

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05"
        android:id="@+id/v_gd_.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/v_gd_.08"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".3"
        android:id="@+id/v_gd_3"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".4"
        android:id="@+id/v_gd_4"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".6"
        android:id="@+id/v_gd_6"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".7"
        android:id="@+id/v_gd_7"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".9"
        android:id="@+id/v_gd_9"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".98"
        android:id="@+id/v_gd_.98"/>





    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B2EBF2"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="@+id/main"
        app:layout_constraintStart_toStartOf="@+id/main"
        app:layout_constraintEnd_toEndOf="@+id/main"
        app:layout_constraintBottom_toBottomOf="@+id/h_gd_4"
        android:padding="190dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:id="@+id/cv1"
app:layout_constraintTop_toTopOf="@+id/h_gd_.38"
        app:layout_constraintBottom_toBottomOf="@+id/h_gd_5"
        app:layout_constraintStart_toStartOf="@+id/v_gd_.08"
        app:layout_constraintEnd_toEndOf="@+id/v_gd_3"
>

        <TextView
            android:id="@+id/tvOfcv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_launcher_foreground"
            android:text="@string/show_attendance"
            android:textAlignment="center"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:id="@+id/cv2"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="@+id/h_gd_.38"
        app:layout_constraintBottom_toBottomOf="@+id/h_gd_5"
        app:layout_constraintStart_toStartOf="@+id/v_gd_4"
        app:layout_constraintEnd_toEndOf="@+id/v_gd_6"

        android:layout_toStartOf="@+id/cv1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_launcher_foreground"
            android:text="@string/attendance"
            android:textAlignment="center"
            android:layout_toStartOf="@+id/show"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:id="@+id/cv3"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="@+id/v_gd_7"
        app:layout_constraintTop_toTopOf="@+id/h_gd_.38"
        app:layout_constraintBottom_toBottomOf="@+id/h_gd_5"
        app:layout_constraintEnd_toEndOf="@+id/v_gd_9"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_launcher_foreground"
            android:text="@string/homework"
            android:textAlignment="center" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/your_image"
        app:layout_constraintTop_toTopOf="@+id/tvBack"
        app:layout_constraintEnd_toEndOf="@+id/tvBack"
        app:layout_constraintBottom_toBottomOf="@+id/tvBack"
        app:layout_constraintStart_toStartOf="@+id/tvBack"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pics"
        app:layout_constraintTop_toTopOf="@+id/h_gd_.57"
        app:layout_constraintStart_toStartOf="@+id/v_gd_.08"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/pics"
            android:drawableEnd="@drawable/ic_launcher_foreground"
            android:textAlignment="center"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payFee"
        app:layout_constraintTop_toTopOf="@+id/h_gd_7"
        app:layout_constraintStart_toStartOf="@+id/v_gd_.08"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payFee"
            android:textAlignment="center"
            app:drawableEndCompat="@drawable/ic_launcher_foreground" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notice"
 app:layout_constraintStart_toStartOf="@+id/v_gd_6"
        app:layout_constraintTop_toTopOf="@+id/h_gd_.57"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/notice"
            app:drawableEndCompat="@drawable/ic_launcher_foreground" />
        <!--            android:drawableEnd="@drawable/ic_launcher_foreground"-->
        <!-- difference ??-->



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about"
        app:layout_constraintStart_toStartOf="@+id/v_gd_6"
        app:layout_constraintTop_toTopOf="@+id/h_gd_7"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/about"
            android:drawableEnd="@drawable/ic_launcher_foreground"
            android:textAlignment="center"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>