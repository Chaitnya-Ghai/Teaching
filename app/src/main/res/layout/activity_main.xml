<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B2EBF2"
        android:layout_centerHorizontal="true"
        android:padding="200dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:id="@+id/cv1"

        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tvOfcv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_launcher_foreground"
            android:text="@string/show_attendance"
            android:textAlignment="center"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:id="@+id/cv2"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/cv1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_launcher_foreground"
            android:text="@string/attendance"
            android:textAlignment="center"
            android:layout_toStartOf="@+id/show"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:id="@+id/cv3"
        android:layout_centerVertical="true"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="20dp"
        app:cardElevation="4dp"
        android:layout_toEndOf="@+id/cv1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_launcher_foreground"
            android:text="@string/homework"
            android:textAlignment="center" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cv1"
        android:layout_alignParentStart="true"
        android:layout_margin="32dp"
        android:src="@drawable/your_image"
        android:scaleType="centerCrop"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/pics"
        android:layout_below="@+id/cv2"
        android:layout_margin="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/pics"
            android:drawableEnd="@drawable/ic_launcher_foreground"
            android:textAlignment="center"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/payFee"
        android:layout_below="@+id/pics"
        android:layout_margin="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/payFee"
            android:textAlignment="center"
            app:drawableEndCompat="@drawable/ic_launcher_foreground" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/notice"
        android:layout_toEndOf="@+id/pics"
        android:layout_below="@+id/cv3"
        android:layout_margin="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/notice"
            app:drawableEndCompat="@drawable/ic_launcher_foreground" />
        <!--            android:drawableEnd="@drawable/ic_launcher_foreground"-->
        <!-- difference ??-->



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/about"
        android:layout_toEndOf="@+id/payFee"
        android:layout_below="@+id/notice"
        android:layout_margin="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/about"
            android:drawableEnd="@drawable/ic_launcher_foreground"
            android:textAlignment="center"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>